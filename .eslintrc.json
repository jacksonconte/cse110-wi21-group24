{
  "env": {
    "browser": true,
    "es2021": true,
  },
  "extends": ["standard", "prettier", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "all"],
    "semi": ["error", "always"]
  },
  "noInlineConfig": true
}
