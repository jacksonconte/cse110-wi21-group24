{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "all"],
    "semi": ["error", "always"],
    "prefer-const": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-unused-expressions": "off"
  },
  "noInlineConfig": true
}
